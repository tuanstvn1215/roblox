extends ../../layouts/header_footer.pug
block content
   .container.mt-5
      #carouselExampleIndicators.carousel.slide(data-ride='carousel')
         .carousel-inner
            .carousel-item.active
               img.d-block.w-100(src='https://ejoy-english.com/blog/wp-content/uploads/2018/05/tie%CC%82%CC%81ng-anh-u%CC%81c-.jpg', alt='First slide')
            .carousel-item
               img.d-block.w-100(src='https://ejoy-english.com/blog/wp-content/uploads/2018/05/tie%CC%82%CC%81ng-anh-u%CC%81c-.jpg', alt='Second slide')
            .carousel-item
               img.d-block.w-100(src='https://ejoy-english.com/blog/wp-content/uploads/2018/05/tie%CC%82%CC%81ng-anh-u%CC%81c-.jpg', alt='Third slide')
         a.carousel-control-prev(href='#carouselExampleIndicators', role='button', data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
         a.carousel-control-next(href='#carouselExampleIndicators', role='button', data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next
      if err
         .alert.alert-danger(role="alert") #{err}
      form#form(action='/transaction/account/'+ id , method="post")
         if balance >= 0
            div Số dư sau khi thanh toán là #{balance}
            button#btn-Buy Thanh Toán
      if balance < 0
         div Số dư không đủ để mua
         a.btn.btn-success(href="/") Quay Lại
      script(src="/js/account/index.js")